@model Massoterapia.Models.Avaliacao

@{
    ViewData["Title"] = "Inclui";
}

<h1>Inclui</h1>

<h4>Avaliacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Inclui">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label for="Nota">Nota:</label>
            <select name="Nota" id="Nota">
                <option value="">Selecionar Nota</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>

            </select>

@*             <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <textarea asp-for="Comentario" class="form-control"></textarea>
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTratamento" class="control-label"></label>
                <select asp-for="IdTratamento" class="form-control" asp-items="ViewBag.tratamento" disable></select>
            </div>
            <div class="form-group">
                @if (Context.User.IsInRole(Perfil.Cliente.ToString()))
                {
                    <input type="submit" value="Create" class="btn btn-primary" />
                }
                <div>
                    <a asp-action="Index" asp-controller="Tratamento"> Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
