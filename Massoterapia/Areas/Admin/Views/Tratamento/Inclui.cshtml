@model Massoterapia.Models.Tratamento

@{
    ViewData["Title"] = "Inclui";
}

<h1>Inclui</h1>

<h4>Tratamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Inclui">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TecnicaTratamento" class="control-label"></label>
                <input asp-for="TecnicaTratamento" class="form-control" />
                <span asp-validation-for="TecnicaTratamento" class="text-danger"></span>
            </div>
            @if (Context.User.IsInRole(Perfil.Profissional.ToString()))
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                    <input class="form-check-input" asp-for="TratamentoFinalizado" /> @Html.DisplayNameFor(model => model.TratamentoFinalizado)
                </label>
            </div>
            }
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.clientes" disabled></select>
            </div>
            <div class="form-group">
                <label asp-for="IdProfissional" class="control-label"></label>
                <select asp-for="IdProfissional" class="form-control" asp-items="ViewBag.Profissional" disabled></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
